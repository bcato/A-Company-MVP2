<div class="row">
	<div class="span6 offset3">
		<div class="well">
			<%= image_tag @instrument.image %>
		<p>
		  <%= @instrument.description %>
		</p>
		<p>
		  <%= @instrument.user.name %>
		</p>
		<% if current_user == @instrument.user %>
			<%= link_to 'Edit', edit_instrument_path(@instrument) %> |
		<% end %>
		<%= link_to 'Back', instruments_path %>
	</div>
	</div>
</div>



